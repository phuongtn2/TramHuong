<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tramhuong.mapper.BlogMapper">

	<insert id="add" useGeneratedKeys="true" keyProperty="dto.id">
		INSERT INTO BLOGS(
		name
		, status
		)VALUES(
		#{dto.name}
		, #{dto.status}
		)
	</insert>

	<update id="update">
		UPDATE BLOGS SET
		name = #{dto.name}
		,status = #{dto.status}
		WHERE id= #{dto.id}
	</update>
	<delete id="delete">
		DELETE FROM BLOGS WHERE id = #{id}
	</delete>
	<select id="findAll" resultType="blog">
		SELECT * FROM BLOGS ORDER BY id
	</select>
	<select id="findByStatus" resultType="blog">
		SELECT * FROM BLOGS WHERE status = #{status} ORDER BY id
	</select>
	<select id="findById" resultType="blog">
		SELECT * FROM BLOGS WHERE id=#{id}
	</select>
</mapper>
